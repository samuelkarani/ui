{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "subject-case": [0],
    "type-enum": [
      2,
      "always",
      [
        "wip",
        "feat",
        "fix",
        "doc",
        "style",
        "refactor",
        "test",
        "chore",
        "release"
      ]
    ]
  }
}
